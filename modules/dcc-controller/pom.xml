<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    
    <modelVersion>4.0.0</modelVersion>
    <artifactId>dcc-controller</artifactId>

    <parent>
        <groupId>org.metaeffekt.dcc</groupId>
        <artifactId>dcc-modules-behavior-pom</artifactId>
        <relativePath>../../pom-hierarchy/dcc-behavior-pom/dcc-modules-behavior-pom</relativePath>
        <version>0.2.0</version>
    </parent>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.metaeffekt.core</groupId>
                <artifactId>ae-artifact-publish-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-runtime</id>
                        <phase>package</phase>
                        <goals>
                            <goal>publish-artifact</goal>
                        </goals>
                        <configuration>
                            <qualifier>runtime</qualifier>
                            <filesets>
                                <!-- copy src/main/config; this may contain property tokens -->
                                <fileset>
                                    <directory>${basedir}/target/classes</directory>
                                    <includes>
                                        <include>**/*.class</include>
                                        <include>**/*.xml</include>
                                        <include>**/*.xsd</include>
                                        <include>**/*.txt</include>
                                        <include>**/*.ldif</include>
                                        <include>**/*.xls</include>
                                        <include>**/*.properties</include>
                                        <include>*.uris</include>
                                        <include>*.jks</include>
                                        <include>*.crt</include>
                                        <include>*.wsdl</include>
                                        <include>*.sh</include>
                                        <include>*.bat</include>
                                        <include>*.keystore</include>
                                        <include>*.truststore</include>
                                        <include>META-INF/services/**/*</include>
                                        <include>META-INF/**/*.xslt</include>
                                        <include>META-INF/**/*.schemas</include>
                                        <include>META-INF/**/*.handlers</include>
                                        <include>META-INF/**/*.wsdd</include>
                                        <include>META-INF/**/*.csv</include>
                                    </includes>
                                    <excludes>
                                    </excludes>
                                    <followSymlinks>false</followSymlinks>
                                </fileset>
                            </filesets>
                            <!-- replace module level property tokens -->
                            <propertiesFile>module.configuration.properties</propertiesFile>
                        </configuration>
                    </execution>
                </executions>
                </plugin>
        </plugins>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <executions>
                        <execution><!-- FIXME reconsider -->
                            <!-- copy the content for config artifact -->
                            <id>copy-config-resources</id>
                            <phase>process-test-resources</phase>
                            <goals>
                                <goal>copy-resources</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>${project.build.directory}/tmp/config-artifact/</outputDirectory>
                                <resources>
                                    <resource>
                                        <directory>${basedir}/src/main/config</directory>
                                        <includes>
                                            <include>*</include>
                                        </includes>
                                        <excludes>
                                            <exclude>**/.svn/**/*</exclude>
                                            <exclude>**/.svn</exclude>
                                            <exclude>merge/module/**/*</exclude>
                                            <exclude>merge/module</exclude>
                                        </excludes>
                                    </resource>
                                    <resource>
                                        <directory>${basedir}/src/main/gen/META-INF</directory>
                                        <includes>
                                            <include>**</include>
                                        </includes>
                                        <excludes>
                                            <exclude>**/.svn/**/*</exclude>
                                            <exclude>**/.svn</exclude>
                                            <exclude>merge/module/**/*</exclude>
                                            <exclude>merge/module</exclude>
                                        </excludes>
                                    </resource>
                                    <resource>
                                        <directory>${basedir}/</directory>
                                        <includes>
                                            <include>configuration/**</include>
                                        </includes>
                                        <excludes>
                                            <exclude>**/.svn/**/*</exclude>
                                            <exclude>**/.svn</exclude>
                                        </excludes>
                                    </resource>
                                </resources>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
        
    </build>
    
